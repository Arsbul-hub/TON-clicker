
<ButImage@ButtonBehavior+AsyncImage>
<SettingsTab>:
    orientation: "vertical"
    size_hint: 1,1
    pos_hint: {"center_x": .5, "center_y": .5}
    border_radius: 5
    radius: [5]
    elevation: 20

<Game>:


    orientation: 'vertical'


    MDBottomNavigation:
        name: "tools"
        #color stuff
        #panel_color: 0,0,1,1

        MDBottomNavigationItem:
            name: 'main'
            text: "Майнинг"
            icon: 'bitcoin'
            id: hi
            Image:
                source: "background.jpg"
                allow_stretch: True
                keep_ratio: False
            ButImage:


                size_hint: (.38,.38) if self.state == 'down' else (.4,.4)

                source: 'mining.png'
                pos_hint: {"center_x":.5,"center_y":.5}

                on_press: root.on_tap()
            Label:
                size_hint: (.5,.5)
                id: TON_num

                #color: 0,0,0,0
                pos_hint: {"center_x":.5,"center_y":.9}


                text: "0"
            Label:
                size_hint: (.5,.5)
                id: doubling
                pos_hint: {"center_x":.5,"center_y":.98}
                #color: 0,0,0,0



                text: ""

        MDBottomNavigationItem:
            id: store
            text: "Магазин"
            icon: 'store'
            name: 'store'
            MDTabs:
                SettingsTab:
                    text: "Удвоение майнинга"



                    FloatLayout:
                        Image:
                            source: "background_store.jpg"
                            allow_stretch: True
                            keep_ratio: False
                            size_hint: 1,1


                        Label:
                            id: text_doubling
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.6}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_doubling
                            pos_hint: {"center_x":.5,"center_y":.4}

                            on_press: root.buy_doubling()

                SettingsTab:

                    text: "Суммироваеие майнинга"
                    FloatLayout:
                        Image:
                            source: "background_store.jpg"
                            allow_stretch: True
                            keep_ratio: False


                        Label:
                            id: text_summation
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.6}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_summation
                            pos_hint: {"center_x":.5,"center_y":.4}

                            on_press: root.buy_summation()
                SettingsTab:

                    text: "Клик-бот"


                    FloatLayout:
                        Image:
                            source: "background_store.jpg"
                            allow_stretch: True
                            keep_ratio: False


                        Label:
                            id: text_bot
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.6}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_bot
                            pos_hint: {"center_x":.5,"center_y":.4}

                            on_press: root.buy_bot()
                SettingsTab:

                    text: "Удвоение майнинга бота"
                    FloatLayout:
                        Image:
                            source: "background_store.jpg"
                            allow_stretch: True
                            keep_ratio: False


                        Label:
                            id: text_bot_doubling
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.6}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_bot
                            pos_hint: {"center_x":.5,"center_y":.4}

                            on_press: root.buy_bot_doubling()
                SettingsTab:
                    text: "Скоро!!!"
                    FloatLayout:
                        Label:
                            text: "Скоро появятся новые акции!!! Ждите!!"


