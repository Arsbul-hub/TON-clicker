<ButImage@ButtonBehavior+AsyncImage>
<Game>:


    orientation: 'vertical'


    MDBottomNavigation:
        name: "tools"
        #color stuff
        #panel_color: 0,0,1,1

        MDBottomNavigationItem:
            name: 'main'
            text: "Майнинг"
            icon: 'play'
            id: hi
            Image:
                source: "background.jpg"
                size_hint: 1,1

            ImageButton:

                size_hint: .4,.4
                source: "mining.png"
                pos_hint: {"center_x":.5,"center_y":.5}

                on_press: root.on_tap()
            Label:
                size_hint: (.5,.5)
                id: bitcoins_num

                #color: 0,0,0,0
                pos_hint: {"center_x":.5,"center_y":.9}


                text: "0"
            Label:
                size_hint: (.5,.5)
                id: doubling
                pos_hint: {"center_x":.5,"center_y":.98}
                #color: 0,0,0,0



                text: ""
        MDBottomNavigationItem:
            id: store
            text: "Магазин"
            icon: 'store'



            ButImage:
                id: but

                size_hint: (.35,.35) if self.state == 'down' else (.4,.4)

                source: 'doubling.png'

                id: doubling_store
                pos_hint: {"center_x":.2,"center_y":.7}

                on_press: root.doubling()
