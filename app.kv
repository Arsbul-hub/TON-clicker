
<ButImage@ButtonBehavior+AsyncImage>
<SettingsTab>:
    orientation: "vertical"
    size_hint: 1,1
    pos_hint: {"center_x": .5, "center_y": .5}
    border_radius: 5
    radius: [5]
    elevation: 20

<Game>:


    orientation: 'vertical'


    MDBottomNavigation:
        name: "tools"
        #color stuff
        #panel_color: 0,0,1,1

        MDBottomNavigationItem:
            name: 'main'
            text: "Майнинг"
            icon: 'bitcoin'
            id: hi
            Image:
                source: "background.jpg"
                allow_stretch: True
                keep_ratio: False
            ButImage:


                size_hint: (.38,.38) if self.state == 'down' else (.4,.4)

                source: 'mining.png'
                pos_hint: {"center_x":.5,"center_y":.5}

                on_press: root.on_tap()
            Label:
                size_hint: (.5,.5)
                id: TON_num

                #color: 0,0,0,0
                pos_hint: {"center_x":.5,"center_y":.9}


                text: "0"
            Label:
                size_hint: (.5,.5)
                id: doubling
                pos_hint: {"center_x":.5,"center_y":.98}
                #color: 0,0,0,0



                text: ""
            Label:
                id: TON_num_natural
                size_hint: .5,.5
                pos_hint: {"center_x":.5,"center_y":.85}
        MDBottomNavigationItem:
            id: store
            text: "Магазин"
            icon: 'store'
            name: 'store'
            MDTabs:
                SettingsTab:
                    title: "Прокачка майнинга"



                    FloatLayout:
                        Image:
                            source: "doubling_background.png"
                            allow_stretch: True
                            keep_ratio: False
                            size_hint: 1,1


                        Label:
                            id: text_doubling
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.6}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_doubling
                            pos_hint: {"center_x":.5,"center_y":.4}

                            on_press: root.buy_doubling()

                SettingsTab:

                    title: "Клик-бот"
                    FloatLayout:
                        Image:
                            source: "doubling_background.png"
                            allow_stretch: True
                            keep_ratio: False


                        Label:
                            id: text_bot
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.6}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_bot
                            pos_hint: {"center_x":.5,"center_y":.4}

                            on_press: root.buy_bot()
                SettingsTab:
                    title: "Скоро!!!"
                    FloatLayout:
                        Label:
                            text: "Скоро появятся новые акции!!! Ждите!!"
        MDBottomNavigationItem:
            id: games
            text: "Игры"
            icon: 'google-controller'
            name: 'games'
            MDTabs:
                SettingsTab:
                    title: "Угадайка"



                    FloatLayout:
                        id: find_it1

                        Button:
                            id: test_b
                            size_hint: .3,.3
                            pos_hint: {"center_x":.5,"center_y":.5}
                            text: "Играть"
                            on_press: root.find_it()