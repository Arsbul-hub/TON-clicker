<ButImage@ButtonBehavior+AsyncImage>
<Game>:


    orientation: 'vertical'


    MDBottomNavigation:
        name: "tools"
        #color stuff
        #panel_color: 0,0,1,1

        MDBottomNavigationItem:
            name: 'main'
            text: "Майнинг"
            icon: 'play'
            id: hi
            Image:
                source: "background.jpg"
                size_hint: 1,1


            ButImage:


                size_hint: (.35,.35) if self.state == 'down' else (.4,.4)

                source: 'mining.png'
                pos_hint: {"center_x":.5,"center_y":.5}

                on_press: root.on_tap()
            Label:
                size_hint: (.5,.5)
                id: bitcoins_num

                #color: 0,0,0,0
                pos_hint: {"center_x":.5,"center_y":.9}


                text: "0"
            Label:
                size_hint: (.5,.5)
                id: doubling
                pos_hint: {"center_x":.5,"center_y":.98}
                #color: 0,0,0,0



                text: ""
        MDBottomNavigationItem:
            id: store
            text: "Магазин"
            icon: 'store'
            Carousel:
                direction: 'right'
                FloatLayout:
                    Image:
                        source: "doubling.png"


                    MDLabel:
                        id: text_doubling
                        text: ""
                        pos_hint: {"center_x":.5,"center_y":.6}
                        size_hint: (.2,.2)
                    Button:


                        size_hint: (.19,.19) if self.state == 'down' else (.2,.2)

                        text: "Удвоение майнинга"

                        id: buy_doubling
                        pos_hint: {"center_x":.5,"center_y":.4}

                        on_press: root.doubling()
                FloatLayout:
                    Label:
                        text: "Скоро появятся новые акции!!! Ждите!!"
