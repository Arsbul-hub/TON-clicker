
<ButImage@ButtonBehavior+AsyncImage>
<SettingsTab>:
    orientation: "vertical"
    size_hint: 1,1
    pos_hint: {"center_x": .5, "center_y": .5}
    border_radius: 5
    radius: [5]
    elevation: 20

<Game>:


    orientation: 'vertical'


    MDBottomNavigation:
        name: "tools"
        #color stuff
        #panel_color: 0,0,1,1

        MDBottomNavigationItem:
            name: 'main'
            text: "Майнинг"
            icon: 'bitcoin'
            id: hi
            Image:
                source: "background.jpg"
                allow_stretch: True
                keep_ratio: False
            ButImage:


                size_hint: (.38,.38) if self.state == 'down' else (.4,.4)

                source: 'mining.png'
                pos_hint: {"center_x":.5,"center_y":.5}

                on_press: root.on_tap()
            Label:
                size_hint: (1,1)
                id: TON_num

                #color: 0,0,0,0
                pos_hint: {"center_x":.5,"center_y":.9}



            MDIconButton:
                id: show_info
                icon: "information"
                pos_hint: {"center_x":.90,"center_y":.90}
                user_font_size: "30sp"


        MDBottomNavigationItem:
            id: store
            text: "Магазин"
            icon: 'store'
            name: 'store'
            MDTabs:
                lock_swiping: True
                SettingsTab:
                    text: "Майнинг"



                    BoxLayout:
                        orientation: "vertical"


                        Label:
                            id: text_doubling
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.9}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_doubling
                            pos_hint: {"center_x":.5,"center_y":.8}

                            on_press: root.buy_doubling()

                #SettingsTab:

                    #text: "Прокачка кнопки"



                        Label:
                            id: text_summation
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.6,"center_y":.7}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_summation
                            pos_hint: {"center_x":.5,"center_y":.6}

                            on_press: root.buy_summation()
                SettingsTab:

                    text: "Клик-бот"


                    BoxLayout:
                        orientation: "vertical"


                        Label:
                            id: text_bot
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.9}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_bot
                            pos_hint: {"center_x":.5,"center_y":.75}

                            on_press: root.buy_bot()




                        Label:
                            id: text_bot_doubling
                            text: ""
                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {"center_x":.5,"center_y":.6}
                            size_hint: (.4,.4)
                        Button:


                            size_hint: .3,.1

                            text: "Купить"
                            allow_stretch: True
                            keep_ratio: False
                            id: buy_bot
                            pos_hint: {"center_x":.5,"center_y":.45}

                            on_press: root.buy_bot_doubling()
                SettingsTab:
                    text: "Скоро!!!"
                    FloatLayout:
                        Label:
                            text: "Скоро появятся новые акции!!! Ждите!!"
        MDBottomNavigationItem:
            id: games
            text: "Игры"
            icon: 'google-controller'
            name: 'games'
            MDTabs:
                lock_swiping: True
                SettingsTab:

                    text: "Рулетка"



                    FloatLayout:
                        id: find_it1
                        Label:
                            id: value_bet_text
                            text: "Ваша ставка: ??? TON"
                            size_hint: .3,.3
                            pos_hint: {"center_x":.5,"center_y":.8}
                        Button:
                            id: test_b
                            size_hint: .3,.1
                            pos_hint: {"center_x":.5,"center_y":.7}
                            text: "Играть"
                            on_press: root.find_it()
                        Label:
                            text: "Установите ставку в %:"
                            size_hint: .3,.3
                            pos_hint: {"center_x":.5,"center_y":.2}

                        MDSlider:
                            id: bet_value
                            min: 0
                            max: 100
                            step: 1
                            on_touch_up: root.show_value()
                            pos_hint: {"center_x":.5,"center_y":.1}
                            orientation: 'horizontal'


                SettingsTab:
                    text: "Скоро!!!"
                    FloatLayout:
                        Label:
                            text: "Скоро появятся новые миниигры!!! Ждите!!"
